<div id="error_explanation" class="bg-danger text-danger">
</div>

<%= form_for(@person, remote: true, :html => { :role => "form" }) do |f| %>
  <div class="row">
    <div class="col-md-5">    
     <label class="field">Nome</label>
     <%= f.text_field :name,:class => "form-control input-md",:maxlength => 150 %> 
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", :class=>"btn btn-success" %>
  </div>
<% end %>


