<div id="error_explanation" class="bg-danger text-danger">
</div>

<%= form_for(@credit_card, remote: true, :html => { :role => "form" }) do |f| %>
  <div class="row">
    <div class="col-md-5">    
     <label class="field">Número</label>
     <%= f.text_field :display_number,:class => "form-control input-md",:maxlength => 150, placeholder: "4 ulitmos digitos do cartão" %> 
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">    
     <label class="field">Limite</label>
     <%= f.text_field :limit,:class => "form-control input-md",:maxlength => 150 %> 
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", :class=>"btn btn-success" %>
  </div>
<% end %>


