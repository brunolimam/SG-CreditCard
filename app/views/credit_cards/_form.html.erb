<div id="error_explanation" class="bg-danger text-danger">
</div>

<%= form_for(@credit_card, remote: true, :html => { :role => "form" }) do |f| %>
  <div class="row">
    <div class="col-md-5">    
     <label class="field">Número</label>
     <%= f.text_field :display_number,:class => "form-control input-md",:maxlength => 150, placeholder: "4 ulitmos digitos do cartão" %> 
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">    
     <label class="field">Limite</label>
     <%= f.text_field :limit,:class => "form-control input-md",:maxlength => 150 %> 
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-5">    
     <label class="field">Dia de fechamento de fatura</label>
     <%= f.text_field :close_day,:class => "form-control input-md", :maxlength => 2 %> 
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">    
     <label class="field">Dia de vencimento da Fatura</label>
     <%= f.text_field :p_day,:class => "form-control input-md",:maxlength => 2 %> 
    </div>
  </div>

<div class="row">
  <div class="col-md-5">
     <label class="field">Operadora</label>
    <select name="credit_card[financial]" id="credit_card_financial" class="form-control">
        <option value="1">Credicard</option>
        <% if @credit_card.financial == 2%>
          <option value="2" selected="selected">Nubank</option>        
        <%else%>        
          <option value="2">Nubank</option>        
        <%end%>
    </select>
  </div>
</div>

<br>
<br>
  <div class="actions">
    <%= f.submit "Salvar", :class=>"btn btn-success" %>
  </div>
<% end %>


