
<% resource.email = "admin@mail.com" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="text-center label-login">Login</h1>
        </div>
        <div class="modal-body">
          <form class="form col-md-12 center-block">
            <div class="form-group">
              <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
            </div>
            <div class="form-group">
              <%= f.submit "Entrar", class: "btn btn-primary btn-lg btn-block", id: "btn-login" %>
            </div>
          </form>
        </div>

        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

<% end %>
