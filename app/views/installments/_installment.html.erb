<tr id="installment_<%= installment.id %>">
  <td>
    <label class="fields-show-view"><%= installment.id %></label>
  </td>
  <td>
    <label class="fields-show-view"><%= installment.p_day.strftime("%d/%m %Y") %></label>
  </td>
  <td>
    <label class="fields-show-view"><%= installment.value %></label>
  </td> 
  <td>
    <label class="fields-show-view"><%= installment.person.name %></label>
  </td> 
  <td>
    <%= link_to edit_purchase_path(installment), remote: true do %>
      <button type="button" class="btn btn-primary">Editar</button>
    <% end %>

    <%= link_to installment, remote: true, method: :delete, data: { confirm: "Tem certeza?" } do %>
      <button type="button" class="btn btn-danger">Remover</button>
    <% end %>
  </td>
</tr>