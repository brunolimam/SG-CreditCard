<%= stylesheet_link_tag 'custom' %>
 <%= link_to "Adicionar", new_purchase_path, remote: true, class: "btn btn-success fields-show-button" %>


<div class="col-sm-2 navbar-form pull-right">
      <%= render "composer/search", path: purchases_path%>
</div>
<br><br><br>
<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered table-striped table-sm"> 
      <thead>
        <th colspan="3">Compras - Total</th>
        <th colspan="3">Valores - Total</th>
      </thead>
      <thead>
        <th>Pagas</th>
        <th>Restantes</th>
        <th>Total</th>
        <th>Tot Pagas</th>
        <th>Restantes</th>
        <th>Total</th>
      </thead>
      <td><%=@ok%></td>
      <td><%=@remaining%></td>
      <td><%=@all%></td>
      <td><%=number_to_currency(@value.map(&:value).inject(:+)-@value_remaining)%></td>
      <td><%=number_to_currency(@value_remaining)%></td>
      <td><%=number_to_currency(@value.map(&:value).inject(:+))%></td>
    </table>
  </div>  

  <div class="col-md-6">
    <table class="table table-bordered table-striped table-sm"> 
      <thead>
        <th colspan="3">Compras - SubTotal</th>
        <th colspan="3">Valores - Subtotal</th>
      </thead>
      <thead>
        <th>Pagas</th>
        <th>Restantes</th>
        <th>Total</th>
        <th>Tot Pagas</th>
        <th>Restantes</th>
        <th>Total</th>
      </thead>
      <td><%=@ok_for_search%></td>
      <td><%=@remaining_for_search%></td>
      <td><%=@all_for_search%></td>
      <td><%=number_to_currency(@value_for_search.map(&:value).inject(:+)-@value_remaining_for_search)%></td>      
      <td><%=number_to_currency(@value_remaining_for_search)%></td>      
      <td><%=number_to_currency(@purchases.map(&:value).inject(:+))%></td>
    </table>
  </div>     
</div>



<table class="table table-striped">
  <thead>
    <tr>      
      <th><label class="section"><%= sort_link @search, :id, "Código" %></label></th>
      <th><label class="section"><%= sort_link @search, :purchased_in, "Data" %></label></th>
      <th><label class="section"><%= sort_link @search, :place_name, "Estabelecimento" %></label></th>      
      <th><label class="section"><%= sort_link @search, :value, "Valor" %></label></th>      
      <th>Ação</th>      
    </tr>
  </thead>

  <tbody id="people">
    <%= render @purchases %>
  </tbody>    
</table>

<%= render 'composer/dialog' %>